@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .fa-linkedin,
    .fa-twitter,
    .fa-facebook {
        color: black;
    }


    .fa-linkedin:hover,
    .fa-twitter:hover,
    .fa-facebook:hover {
        color: white;
    }

    .fa-eye{
            position: absolute;
            right: 10px;
            /*padding: 10px;*/
            font-size: 20px;
            bottom: 20px;
            cursor: pointer;
        }

    .input[type=radio], input[type=checkbox]{
        height:1em;
        width:1em;
    }
</style>


<div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://vuainnhanh.com/wp-content/uploads/2023/02/logo-chu-thap-do.png" class="img-fluid"
             alt="Sample image" style="padding:20px 0 0 0 ; max-width:100%; height:auto">
    </div>
    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
            <button style="border-radius: 50%;" type="button"
                    class="btn btn-outline-dark btn-floating mx-1">
                <i class="fa fa-facebook"></i>
            </button>

            <button style="border-radius: 50%;" type="button"
                    class="btn btn-outline-dark btn-floating mx-1">
                <i class="fa fa-twitter"></i>
            </button>

            <button style="border-radius: 50%;" type="button"
                    class="btn btn-outline-dark btn-floating mx-1">
                <i class="fa fa-linkedin"></i>
            </button>
        </div>

        <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
        </div>

        <form id="account" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" id="showPassword" />
                <i class="fa fa-eye" onclick="myFunction()"></i>
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div class="checkbox mb-0">
                    <input class="form-check-input me-2" asp-for="Input.RememberMe" type="checkbox" id="remember" style="margin-top:8px;"/>
                    <label asp-for="Input.RememberMe" class="form-check-label" id="remember" style="font-size:15px; ">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <a class="text-body" id="forgot-password" asp-page="./ForgotPassword" style="font-size:15px; ">Forgot your password?</a>
            </div>

            <div class="text-center text-lg-start mt-4 pt-2">
                <button id="login-submit" type="submit" class="btn btn-primary btn-lg"
                        style="padding-left: 2.5rem; padding-right: 2.5rem;">
                    Login
                </button>
                <p class="small fw-bold mt-2 pt-1 mb-0" style="color:#212529;">
                    Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                                              class="link-danger">Register</a>
                </p>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function myFunction() {
            var x = document.getElementById("showPassword");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>

}
